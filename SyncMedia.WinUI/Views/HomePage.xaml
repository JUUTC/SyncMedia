<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SyncMedia.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Hero Section -->
            <Border 
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="32,24">
                <StackPanel Spacing="16">
                    <TextBlock 
                        Text="Welcome to SyncMedia"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Foreground="White"/>
                    
                    <TextBlock 
                        Text="Smart media file synchronization with duplicate detection and gamification"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Foreground="White"
                        Opacity="0.9"/>

                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                        <Border Background="White" CornerRadius="4" Padding="16,8">
                            <StackPanel Spacing="4">
                                <TextBlock 
                                    Text="0"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <TextBlock 
                                    Text="Files Synced"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="4" Padding="16,8">
                            <StackPanel Spacing="4">
                                <TextBlock 
                                    Text="0 MB"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <TextBlock 
                                    Text="Space Saved"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Quick Actions"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Grid ColumnSpacing="12" RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button 
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        Command="{x:Bind ViewModel.ConfigureFoldersCommand}">
                        <StackPanel Spacing="8" Padding="8">
                            <FontIcon Glyph="&#xE8B7;" FontSize="24"/>
                            <TextBlock Text="Configure Folders"/>
                        </StackPanel>
                    </Button>

                    <Button 
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource AccentButtonStyle}"
                        Command="{x:Bind ViewModel.StartSyncCommand}">
                        <StackPanel Spacing="8" Padding="8">
                            <FontIcon Glyph="&#xE895;" FontSize="24"/>
                            <TextBlock Text="Start Sync"/>
                        </StackPanel>
                    </Button>

                    <Button 
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        Command="{x:Bind ViewModel.ViewStatisticsCommand}">
                        <StackPanel Spacing="8" Padding="8">
                            <FontIcon Glyph="&#xE9D9;" FontSize="24"/>
                            <TextBlock Text="View Statistics"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Features -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Features"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Grid ColumnSpacing="12" RowSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Smart Sync -->
                    <Border 
                        Grid.Row="0" Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE895;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Smart Sync" FontWeight="SemiBold"/>
                            <TextBlock 
                                Text="Automatically synchronize media files between folders with intelligent duplicate detection"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Duplicate Detection -->
                    <Border 
                        Grid.Row="0" Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="8">
                            <Grid>
                                <FontIcon Glyph="&#xE8F4;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <Border 
                                    Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                    CornerRadius="4"
                                    Padding="4,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                    <TextBlock Text="PRO" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="AI Duplicate Detection" FontWeight="SemiBold"/>
                            <TextBlock 
                                Text="Find similar images with perceptual hashing and GPU-accelerated deep learning"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- File Preview -->
                    <Border 
                        Grid.Row="1" Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE714;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="File Preview" FontWeight="SemiBold"/>
                            <TextBlock 
                                Text="See images and play videos during sync operations for better visibility"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Gamification -->
                    <Border 
                        Grid.Row="1" Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE734;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Gamification" FontWeight="SemiBold"/>
                            <TextBlock 
                                Text="Earn achievements, level up, and compete on leaderboards while organizing your files"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
