<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SyncMedia.WinUI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SyncMedia - Modern Media Synchronization">

    <Grid>
        <NavigationView x:Name="NavView" 
                       PaneDisplayMode="Left"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="True"
                       Header="SyncMedia">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Sync" Icon="Sync" Tag="sync"/>
                <NavigationViewItem Content="Files" Icon="Folder" Tag="files"/>
                <NavigationViewItem Content="Progress" Icon="ProgressRing" Tag="progress"/>
                <NavigationViewItem Content="Statistics" Icon="Chart" Tag="stats"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                        <TextBlock Text="Welcome to SyncMedia (WinUI 3)" 
                                 Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Phase 3 WinUI 3 Migration - In Progress" 
                                 Style="{StaticResource SubtitleTextBlockStyle}"
                                 Opacity="0.7"/>
                        <ProgressRing IsActive="False" Width="48" Height="48"/>
                    </StackPanel>
                </Grid>
            </Frame>
        </NavigationView>
    </Grid>
</Window>
