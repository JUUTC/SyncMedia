<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SyncMedia.WinUI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:advertising="using:Microsoft.Advertising.WinRT.UI"
    mc:Ignorable="d"
    Title="SyncMedia - Modern Media Synchronization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Navigation Content -->
        <NavigationView x:Name="NavView" 
                       Grid.Row="0"
                       PaneDisplayMode="Left"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="True"
                       Header="{x:Bind NavView.SelectedItem.Content, Mode=OneWay}"
                       SelectionChanged="NavView_SelectionChanged"
                       IsSettingsVisible="True"
                       SettingsInvoked="NavView_SettingsInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" Icon="Home" Tag="home"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Folders" Tag="folders">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="File Types" Tag="fileTypes">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8F9;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Naming List" Tag="namingList">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8F3;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Sync" Icon="Sync" Tag="sync"/>
                <NavigationViewItem Content="Files" Tag="files">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8A5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Statistics" Icon="Chart" Tag="stats"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
        
        <!-- Ad Container at bottom -->
        <Border Grid.Row="1"
                x:Name="AdBorder"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                HorizontalAlignment="Center"
                Padding="8"
                Visibility="Collapsed">
            <advertising:AdControl x:Name="AdControlBanner"
                                   Width="728"
                                   Height="90"
                                   HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
