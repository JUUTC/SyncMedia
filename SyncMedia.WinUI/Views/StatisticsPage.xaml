<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SyncMedia.WinUI.Views.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- Page Header -->
            <TextBlock 
                Text="Statistics" 
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,8"/>

            <!-- Overall Stats Card -->
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock 
                        Text="Overall Statistics" 
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Total Files Synced -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock 
                                Text="Total Files Synced" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <TextBlock 
                                Text="{x:Bind ViewModel.TotalFilesSynced, Mode=OneWay}" 
                                Style="{StaticResource TitleTextBlockStyle}"
                                FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Total Space Saved -->
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock 
                                Text="Space Saved" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <TextBlock 
                                Text="{x:Bind ViewModel.TotalSpaceSaved, Mode=OneWay}" 
                                Style="{StaticResource TitleTextBlockStyle}"
                                FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Total Syncs Completed -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock 
                                Text="Syncs Completed" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <TextBlock 
                                Text="{x:Bind ViewModel.TotalSyncsCompleted, Mode=OneWay}" 
                                Style="{StaticResource TitleTextBlockStyle}"
                                FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Success Rate -->
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock 
                                Text="Success Rate" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <TextBlock 
                                Text="{x:Bind ViewModel.SuccessRate, Mode=OneWay}" 
                                Style="{StaticResource TitleTextBlockStyle}"
                                FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activity Card -->
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock 
                        Text="Recent Activity" 
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <ListView 
                        ItemsSource="{x:Bind ViewModel.RecentSyncs, Mode=OneWay}"
                        SelectionMode="None"
                        MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:SyncHistoryItem">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon 
                                        Grid.Column="0"
                                        Glyph="&#xE73E;"
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock 
                                            Text="{x:Bind SyncDate}" 
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Text="{x:Bind FileCountText}" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="12"/>
                                    </StackPanel>

                                    <TextBlock 
                                        Grid.Column="2"
                                        Text="{x:Bind Duration}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Gamification Stats Card -->
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock 
                        Text="Gamification" 
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Points -->
                        <StackPanel Grid.Column="0">
                            <TextBlock 
                                Text="Total Points" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <TextBlock 
                                Text="{x:Bind ViewModel.TotalPoints, Mode=OneWay}" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                        </StackPanel>

                        <!-- Achievements -->
                        <StackPanel Grid.Column="1">
                            <TextBlock 
                                Text="Achievements Unlocked" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock 
                                    Text="{x:Bind ViewModel.AchievementsUnlocked, Mode=OneWay}" 
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <TextBlock 
                                    Text="/" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalAchievements, Mode=OneWay}" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- View Achievements Button -->
                    <Button 
                        Content="View All Achievements"
                        Command="{x:Bind ViewModel.ViewAchievementsCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
