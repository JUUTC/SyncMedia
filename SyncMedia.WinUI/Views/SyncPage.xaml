<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SyncMedia.WinUI.Views.SyncPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Spacing="16" MaxWidth="900">
            <!-- Page Header -->
            <TextBlock Text="Sync Operations" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Start, monitor, and control file synchronization" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

            <!-- Status Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Status" Style="{StaticResource SubtitleTextBlockStyle}" />
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                               Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Border>

            <!-- Progress Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Progress" Style="{StaticResource SubtitleTextBlockStyle}" />
                    
                    <!-- Overall Progress -->
                    <StackPanel Spacing="8">
                        <Grid>
                            <TextBlock Text="Overall Progress" Style="{StaticResource BodyTextBlockStyle}" />
                            <TextBlock HorizontalAlignment="Right">
                                <Run Text="{x:Bind ViewModel.FilesProcessed, Mode=OneWay}" />
                                <Run Text="/" />
                                <Run Text="{x:Bind ViewModel.TotalFiles, Mode=OneWay}" />
                                <Run Text="files" />
                            </TextBlock>
                        </Grid>
                        <ProgressBar Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}" 
                                     Maximum="100" />
                        <TextBlock HorizontalAlignment="Right" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>
                    </StackPanel>

                    <!-- Current File -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Current File" Style="{StaticResource CaptionTextBlockStyle}" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Text="{x:Bind ViewModel.CurrentFile, Mode=OneWay}" 
                                   TextTrimming="CharacterEllipsis"
                                   ToolTipService.ToolTip="{x:Bind ViewModel.CurrentFile, Mode=OneWay}" />
                    </StackPanel>

                    <!-- Time Information -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Elapsed Time" Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{x:Bind ViewModel.ElapsedTime, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Estimated Remaining" Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{x:Bind ViewModel.EstimatedTimeRemaining, Mode=OneWay}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Command="{x:Bind ViewModel.StartSyncCommand}" 
                        Style="{StaticResource AccentButtonStyle}"
                        MinWidth="120">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE768;" FontSize="16" />
                        <TextBlock Text="Start Sync" />
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.PauseSyncCommand}" 
                        MinWidth="120">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE769;" FontSize="16" />
                        <TextBlock Text="Pause" />
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.StopSyncCommand}" 
                        MinWidth="120">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71A;" FontSize="16" />
                        <TextBlock Text="Stop" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Preview Placeholder -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Height="200">
                <Grid>
                    <TextBlock Text="File Preview Area" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <!-- TODO: Add MediaPlayerElement for video preview -->
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
